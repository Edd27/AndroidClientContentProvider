<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUser">

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_500"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/txtUpdateLastName"
        app:layout_constraintStart_toStartOf="@+id/txtUpdateLastName"
        app:layout_constraintTop_toBottomOf="@+id/txtUpdateLastName"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtUpdateLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtUpdateFirstName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtUpdateFirstName"
        app:layout_constraintTop_toBottomOf="@+id/txtUpdateFirstName"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnCancel2"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="@+id/btnUpdate"
        app:layout_constraintStart_toStartOf="@+id/btnUpdate"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtUpdateFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>